{
  "editor.formatOnSave": true, // Automatyczne formatowanie przy zapisie
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.format.enable": true, // Zezwól ESLint na formatowanie
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "files.eol": "\n", // Używaj końca linii Unix (LF)
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
